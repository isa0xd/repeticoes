programa
{
	
	funcao inicio()
	{
		inteiro soma = 0
		inteiro media
		inteiro numero

		para(inteiro i=0; i < 5; i++){
			escreva("informe um número: (", i+1, ")")
			leia(numero)


			soma = soma + numero
			}
		media = soma / 5

		escreva("a soma é ", soma, "\n")
		escreva("a média é ", media)
	}
}
