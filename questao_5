programa
{
	
	funcao inicio()
	{
		inteiro numero
		inteiro quantidade_par = 0, quantidade_impar = 0
		
		para(inteiro i=1; i <= 5; i++)
	{
		escreva("Informe o ", i,"° número inteiro: ")
		leia(numero)

		se(numero % 2 == 0)
	{
			quantidade_par++
		}
		senao
			{
			quantidade_impar++
			}
		}
		escreva("Você informou ", quantidade_par," números pares e ", quantidade_impar," números ímpares.")
	}
}
